{
    "name": "reactor-ts",
    "version": "0.0.1",
    "description": "Reactor runtime written in TypeScript",
    "main": "lib/reactor.js",
    "dependencies": {
        "@definitelytyped/header-parser": "0.0.29",
        "@definitelytyped/typescript-versions": "0.0.29",
        "@types/microtime": "^2.1.0",
        "@types/parsimmon": "^1.10.1",
        "axios": "^0.26.1",
        "command-line-args": "^5.1.1",
        "got": "^9.6.0",
        "heap": "^0.2.6",
        "microtime": "^3.0.0",
        "nanotimer": "^0.3.15",
        "ulog": "^1.1.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.4.3",
        "@babel/core": "^7.4.3",
        "@babel/node": "^7.2.2",
        "@babel/plugin-proposal-class-properties": "^7.7.4",
        "@babel/plugin-proposal-object-rest-spread": "^7.7.7",
        "@babel/plugin-proposal-optional-chaining": "^7.8.0",
        "@babel/preset-env": "^7.4.3",
        "@babel/preset-typescript": "^7.7.7",
        "@types/jest": "^26.0.24",
        "@types/node": "^16.3.3",
        "@types/uuid": "^8.3.4",
        "dtslint": "^3.4.2",
        "jest": "^27.0.6",
        "marked": ">=4.0.10",
        "parsimmon": "1.13.0",
        "ts-jest": "^27.0.3",
        "typedoc": "^0.21.4",
        "typescript": "^4.3.5"
    },
    "files": [
        "lib"
    ],
    "scripts": {
        "check-types": "tsc",
        "build": "rm -rf dist && babel src --out-dir dist --extensions .ts",
        "deploy": "npm run build && npm run doc",
        "doc": "typedoc --exclude \"**/+(example|benchmark|share)/**/*.ts\" --out docs src && touch docs/.nojekyll",
        "dtslint": "dtslint __tests__/types",
        "test": "jest --coverage",
        "postinstall": "mkdir -p node_modules/@types/ulog; cp src/core/ulog.d.ts node_modules/@types/ulog/index.d.ts"
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "babelConfig": "<rootDir>/.babelrc"
            }
        },
        "testPathIgnorePatterns": [
            "node_modules",
            "defunct",
            "<rootDir>/__tests__/types"
        ],
        "roots": [
            "<rootDir>/src",
            "<rootDir>/__tests__"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        }
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:icyphy/reactor-ts.git"
    },
    "keywords": [
        "IoT",
        "framework",
        "timing",
        "determinism",
        "actors"
    ],
    "author": {
        "name": "Marten Lohstroh",
        "email": "marten@berkeley.edu",
        "url": "http://people.eecs.berkeley.edu/~marten"
    },
    "contributors": [
        "Andres Goens",
        "Matt Weber",
        "Ben Zhang"
    ],
    "license": "MIT"
}
