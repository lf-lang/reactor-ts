{
    "name": "reactor-ts",
    "version": "0.1.0",
    "description": "Reactor runtime written in TypeScript",
    "main": "lib/core/index.js",
    "type": "commonjs",
    "types": "src/core",
    "dependencies": {
        "@types/jest": "^27.0.0",
        "@types/node": "^16.3.3",
        "@types/uuid": "^8.3.4",
        "@definitelytyped/header-parser": "0.0.29",
        "@definitelytyped/typescript-versions": "0.0.29",
        "@babel/cli": "^7.4.3",
        "@babel/core": "^7.4.3",
        "@babel/node": "^7.2.2",
        "@babel/plugin-proposal-class-properties": "^7.7.4",
        "@babel/plugin-proposal-object-rest-spread": "^7.7.7",
        "@babel/plugin-proposal-optional-chaining": "^7.8.0",
        "@babel/preset-env": "^7.4.3",
        "@babel/preset-typescript": "^7.7.7",
        "@types/microtime": "^2.1.0",
        "@types/parsimmon": "^1.10.1",
        "command-line-args": "^5.1.1",
        "got": "^11.8.5",
        "heap": "^0.2.6",
        "microtime": "^3.0.0",
        "nanotimer": "^0.3.15",
        "rimraf": "^3.0.2",
        "typescript": "~4.8.2",
        "ulog": "^1.1.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "dtslint": "^3.4.2",
        "jest": "^27.0.6",
        "marked": ">=4.0.10",
        "parsimmon": "1.13.0",
        "ts-jest": "^27.0.3",
        "typedoc": "0.23.11"
    },
    "scripts": {
        "check-types": "tsc",
        "install": "npx rimraf lib && npx babel src --out-dir lib --extensions .ts",
        "deploy": "npm run build && npm run doc",
        "doc": "typedoc --out docs src/core/index.ts && touch docs/.nojekyll",
        "dtslint": "dtslint __tests__/types",
        "test": "jest --coverage"
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "babelConfig": "<rootDir>/.babelrc"
            }
        },
        "testPathIgnorePatterns": [
            "node_modules",
            "defunct",
            "<rootDir>/__tests__/types"
        ],
        "roots": [
            "<rootDir>/src",
            "<rootDir>/__tests__"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        }
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:lf-lang/reactor-ts.git"
    },
    "keywords": [
        "IoT",
        "framework",
        "timing",
        "determinism",
        "actors"
    ],
    "author": {
        "name": "Marten Lohstroh",
        "email": "marten@berkeley.edu",
        "url": "http://people.eecs.berkeley.edu/~marten"
    },
    "contributors": [
        "Yunsang Cho",
        "Wonseo Choi",
        "Peter Donovan",
        "Andres Goens",
        "Hokeun Kim",
        "Matt Weber",
        "Ben Zhang"
    ],
    "license": "MIT"
}
