{
    "compilerOptions": {
        "allowJs": true,
        "noEmit": true,
        "target": "esnext",
        "esModuleInterop": true,
        "isolatedModules": true,
        "lib": ["esnext", "dom"],
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "declaration": true
    },
    "include": [
        "src/**/*",
        "__tests__"
    ]
}
